<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.modules.customer.dao.CustomerDao">

    <resultMap type="com.modules.customer.entity.CustomerEntity" id="customerMap">
        <result property="id" column="id"/>
        <result property="number" column="number"/>
        <result property="name" column="name"/>
        <result property="grade" column="grade"/>
        <result property="address" column="address"/>
    </resultMap>
    <select id="queryList" resultType="com.modules.customer.entity.CustomerEntity">
        SELECT id, number, `name`, grade, address
        FROM rz_customer
    </select>


</mapper>